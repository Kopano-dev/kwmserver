{
  "extends": "tslint:recommended",
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "indent":  {
      "options": ["tabs"]
    },
    "no-console": false,
    "max-classes-per-file": [false],
    "max-line-length": {
        "options": [120]
    },
    "quotemark": {
      "options": [
          "single",
          "avoid-escape"
      ]
    }
  }
}
